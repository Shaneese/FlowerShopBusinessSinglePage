<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaneese.flowershopbusiness.MainActivity">





    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/missmatties"
        android:scaleType="centerCrop"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Miss Mattie's Flower Shop" />

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:text="ph: 1-800-Matties"/>

    <TextView
        android:id="@+id/websiteAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/contactNumber"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:text="www.missmatties.com"/>






</RelativeLayout>
